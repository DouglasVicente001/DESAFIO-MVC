@model VirtualMagazine.DTO.ReceitaDTO
@{
    Layout="_LayoutAdmin";
}
<h3>Nova Receita</h3>
<hr>
<form class="form-horizontal" asp-controller="Receitas" asp-action="Salvar" method="POST"> 
<input type="hidden" asp-for ="Id" value="0">
<label asp-for="Nome">Nome</label>
<input type="text" asp-for ="Nome" class="form-control" placeholder="Nome da receita"><br>
<span asp-validation-for="Nome"></span>

<label asp-for="TempoPreparo">Tempo de preparo</label>
<input type="text" asp-for ="TempoPreparo" class="form-control" placeholder="ex: 50 minutos"><br>
<span asp-validation-for="TempoPreparo"></span>
<br>

<br>
<label asp-for="ModoPreparo">Modo de preparo</label>
<textarea type="text" class="form-control" asp-for="ModoPreparo" rows="3" placeholder="1 litro de leite ao fogo por 10 minutos"></textarea>
<span asp-validation-for="ModoPreparo"></span>
<br>
<button class ="btn btn-success">Cadastrar</button> 
</form> 